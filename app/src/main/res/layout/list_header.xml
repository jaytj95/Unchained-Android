<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="100dp"
    android:background="@color/unchained_blue"
    android:layout_width="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_query"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_action_action_search"
        android:text="QUERY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_action_device_gps_fixed"
        android:text="LOC"
        android:id="@+id/header_location"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_refresh1"
        android:src="@drawable/ic_hardware_keyboard_arrow_down"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:visibility="gone"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_refresh2"
        android:src="@drawable/ic_hardware_keyboard_arrow_down"
        android:layout_marginEnd="35dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true" />

</RelativeLayout>